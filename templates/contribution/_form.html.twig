<div class="card">

	{{ form_start(formView) }}

	{{ form_errors(formView) }}

	<div class="row">
		<div class="col">
			{% if not trick or not trick.imageInFront.first %}
				<div class="d-flex justify-content-center align-items-center" style="background: url('/src/img/no_image.png') no-repeat center/cover; height: 40vh; border-radius: 10px 10px 0 0">
				{% else %}
					<div class="d-flex justify-content-center align-items-center" style="background: url({{ asset('/img_uploads/'~ trick.imageInFront.first.fileName)}}) no-repeat center; background-size: cover; height: 40vh; border-radius: 10px 10px 0 0">
					{% endif %}

					<div class="w-100 px-lg-5 px-1">
						{% if trick %}
							<h2 class="card-trick_title text-center">
								{{ trick.title }}
							</h2>
						{% else %}
							{{ form_row(formView.title, {'attr': {'data-type':'trick'}}) }}
						{% endif %}
					</div>
				</div>

				<div class="images_section py-2">

					<button type="button" class="btn btn-success bi bi-plus-lg text-uppercase" data-add-card data-type="img">
						Ajouter une image</button>

					<button type="button" class="btn btn-success bi bi-plus-lg text-uppercase" data-add-card data-type="video">
						Ajouter une video</button>

					<div id="medias" data-index="{{(formView.images|length)+(formView.videos|length) - 1}}" class="media-list" data-image-prototype=" {{macros.printImageRow(formView.images.vars.prototype)|e('html_attr')}} " data-video-prototype=" {{macros.printVideoRow(formView.videos.vars.prototype)|e('html_attr')}} ">

						{% set index = 0 %}

						{% for imageForm in formView.images %}
							{{ macros.printImageAvailable(imageForm,index) }}
							{% set index = index + 1 %}
						{% endfor %}

						{% for videoForm in formView.videos %}
							{{ macros.printVideoAvailable(videoForm,index) }}
							{% set index = index + 1 %}
						{% endfor %}
					</div>
				</div>
			</div>
			{{ form_row(formView.lead_in, {'attr': {'data-type':'trick'}}) }}
			{{ form_row(formView.content, {'attr': {'data-type':'trick'}})}}
			{% if not trick %}
				{{ form_row(formView.category, {'attr': {'data-type':'trick'}})}}
			{% endif %}
		</div>

		<div id="form_error">
			{% if formView.vars.valid is same as(false) %}

				<div class="alert alert-danger d-flex align-items-center" id='error_message'>
					<i class="bi bi-exclamation-triangle-fill"></i>
					<div>&nbsp;<strong>Mince alors !</strong>
						<span class="alert-link">Changez quelques trucs</span>
						et essayez de soumettre à nouveau.</div>
				</div>

			{% endif %}

		</div>

		<button type="submit" class="submit btn btn-primary text-uppercase">
			<i class="fas fa-save"></i>
			Soumettre !
		</button>

		{{ form_end(formView) }}
	</div>

	{% block script %}
		<script src="{{ asset('src/js/contributionForm.js') }}"></script>
	{% endblock %}
</div>
